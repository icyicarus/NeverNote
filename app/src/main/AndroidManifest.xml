<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bupt.icyicarus.nevernote">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AtyLaunch"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.OverView"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".views.CalenderView"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name=".init.SetPortrait" />
        <activity
            android:name=".EditNote"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".mediaView.photo.PhotoViewer"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".mediaView.video.VideoViewer"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".mediaView.audio.AudioRecorder"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Audio Recorder"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".mediaView.audio.AudioViewer"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Audio Viewer"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".config.Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Settings" />
    </application>

</manifest>
